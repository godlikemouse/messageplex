{
    "name": "messageplex",
    "description": "Multi-messaging utility",
    "license": "LGPL-3.0-or-later",
    "version": "0.1.0",
    "private": true,
    "main": "src/electron-starter.js",
    "homepage": "./",
    "scripts": {
        "start": "react-scripts start",
        "build": "electron-packager . --asar --prune --extra-resource=./extraResources/services.json --out dist --overwrite",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "dev": "BROWSER=none nf start",
        "package": "electron-forge make",
        "arch": "mkdir -p ./out/make/arch/x64 && cd ./out/make/arch/x64 && debtap ../../deb/x64/message-plex_${npm_package_version}_amd64.deb && cd ../../../.."
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.12.0",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "bootstrap": "^5.0.1",
        "classnames": "^2.3.1",
        "lodash": "^4.17.21",
        "react": "^17.0.2",
        "react-bootstrap": "^1.6.0",
        "react-dom": "^17.0.2",
        "react-scripts": "^4.0.3",
        "web-vitals": "^1.1.2"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "electron": "^12.0.7",
        "foreman": "^3.0.1"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "./src/icons/messageplex.png",
                "name": "messageplex",
                "asar": true,
                "overwrite": true,
                "prune": true,
                "extraResource": "./extraResources/services.json"
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {
                        "name": "Message Plex",
                        "productName": "Message Plex",
                        "icon": "./src/icons/messageplex.png",
                        "category": "office"
                    }
                }
            ]
        }
    }
}
